<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".activity.ListeningActivity">
    <TextView
            android:id="@+id/list_count"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="30dp"
            android:layout_gravity="left"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Listening"/>



    <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/play_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play"
            android:layout_gravity="center"/>

    <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Press to listen"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"/>




    <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/list_show_ans"
            android:textColor="@color/black"
            android:text="answer"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contextClickable="true"
            android:visibility="invisible"
    />

    <ImageView
            android:id="@+id/imgListening_show"
            android:layout_marginTop="10dp"
            android:tint="@color/white"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_check"
            android:layout_gravity="center"
            android:background="@drawable/oval_shape"
            android:visibility="invisible"/>

    <EditText
            android:id="@+id/editTextListen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:inputType="text"
            android:maxLines="2"
            android:scrollHorizontally="false"
            android:textColorHint="@color/black"
            android:padding="20dp"
            android:imeOptions="actionDone"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/colorPrimaryDark"/>

    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="wrap_content">
        <TextView
                android:layout_gravity="top|center"
                android:id="@+id/listenAns"
                android:text="Answer"
                android:textSize="20dp"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:focusable="true"/>
        <TextView
                android:layout_marginRight="20dp"
                android:id="@+id/listenNextFrag"
                android:text="next"
                android:textSize="20dp"
                android:layout_gravity="right"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"/>
    </FrameLayout>


</LinearLayout>